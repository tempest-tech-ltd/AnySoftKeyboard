<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:ask="http://schemas.android.com/apk/res-auto">

    <!-- checked -->
    <item android:state_checked="true" ask:key_type_feedback="true"
          android:drawable="@drawable/ic_keyboard_caps"/>
    <item android:state_checked="true" android:drawable="@drawable/ic_keyboard_caps"/>

    <!-- pressed -->
    <item android:state_pressed="true" ask:key_type_feedback="true" android:drawable="@drawable/ic_keyboard_caps_underlined"/>
    <item android:state_pressed="true" android:drawable="@drawable/ic_keyboard_caps_underlined"/>

    <!-- Normal keys -->
    <item ask:key_type_feedback="true" android:drawable="@drawable/ic_keyboard_caps_outline"/>
    <item android:drawable="@drawable/ic_keyboard_caps_outline"/>
</selector>
